{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "rootDir":"./",
    "outDir":"./dist",
    "watch": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@api/*": ["api/*"]
    }
  },
  "include":[
    "./api/**/*"
  ],
  "exclude":[
    "web",
    "static"
  ]
}