{
  "name": "log_viewer",
  "version": "Beta0.0.1",
  "author": {
    "name": "Yu Tian"
  },
  "scripts": {
    "lint": "tslint -c tslint.json 'api/**/*.ts'",
    "test": "set NODE_ENV=test&& nyc mocha -r ./node_modules/ts-node/register -r ./node_modules/source-map-support/register api/**/*.spec.ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "web/**/*.*",
      "**/*.d.ts",
      "**/*.spec.ts",
      "**/*.schemas.ts",
      "**/*.schema.ts",
      "api/config/*.ts",
      "api/model/*.ts",
      "api/constants/*.ts",
      "**/server.ts",
      "**/*.js"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": true
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "express-jsonschema": "^1.1.6",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.2.1",
    "log4js": "^2.7.0",
    "mongoose": "^5.1.1",
    "reflect-metadata": "^0.1.12",
    "supertest": "^3.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.2.0",
    "@types/mongoose": "^5.0.14",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^11.8.0",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "typescript": "^2.8.3"
  },
  "license": "MIT"
}
